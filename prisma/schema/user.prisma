model User {
    uuid     String @id @default(uuid()) @db.Uuid
    name     String @db.VarChar(15)
    surname  String @db.VarChar(15)
    password String
    email    String @unique @db.VarChar(20)
    year     Int
    role     Role   @default(student)

    enrollment Enrollment[]
    review     Review[]
}

enum Role {
    student
    teacher
}
